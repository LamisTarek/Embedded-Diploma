#include"stdio.h"
void count1s(unsigned int num)
{
	int c=0;
	while(num!=0)
	{
		num=num&(num-1);
		c++;
	}
}
	/*for(c=0;num;num>>=1)
	{
		c+=num&1;
	}
	return c;
}*/
int main(void){
	int arr[10],i=0;
	unsigned int num;
	printf("Enter number to convert:");
	fflush(stdout);
	scanf("%u",&num);
	for(i=0;num>0;i++)
	{
		arr[i]=num%2;
		num/=2;
	}
	for(i=i-1;i>=0;i--)
	{
		printf("%d",arr[i]);
	}
	printf("\n1's in binary number: %d",count1s(num));
}

