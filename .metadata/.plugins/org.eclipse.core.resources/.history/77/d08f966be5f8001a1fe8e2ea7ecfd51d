#include"stdio.h"
int count1s(int num)
{
	unsigned int c;
	for(c=0; num ;num>>1)
	{
		c+=num&1;
	}
	return c;
}
int main(){
	int arr[10],num,i=0;
	printf("Enter number to convert:");
	fflush(stdout);
	scanf("%d",&num);
	for(i=0;num>0;i++)
	{
		arr[i]=num%2;
		num/=2;
	}
	for(i=i-1;i>=0;i++)
	{
		printf("%d",arr[i]);
	}
	printf("1's in binary number: %d",count1s(num));
}
