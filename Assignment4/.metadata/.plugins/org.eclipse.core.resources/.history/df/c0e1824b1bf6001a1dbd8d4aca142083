//unique numbers
#include"stdio.h"
int uniq_num(int arr[],int n)
{
	int i, res=0;
	for(i=0; i<n;i++){
		while(i<n-1&&arr[i]==arr[i+1])
			i++;
		res++;
	}
	return res;
	}

int main(){
	int arr[7],n;
	printf("Enter the elements of the array");
	fflush(stdout);
	scanf("%d",&n);
	n= sizeof(arr)/sizeof(arr[0]);
	uniq_num(arr,n);
	return 0;
}

















