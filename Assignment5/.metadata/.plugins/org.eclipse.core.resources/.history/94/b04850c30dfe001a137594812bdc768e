//add complex number
#include"stdio.h"
struct Scomplex{
	float real;
	float imagin;
};
struct Scomplex read(){
	struct Scomplex xx;
	printf("Enter 1st complex number\n");
		fflush(stdout);
		printf("Enter real and imaginary respectively:");
		fflush(stdout);
		scanf("%f%f",&xx.real,&xx.imagin);
		printf("real=%f\n imagin=%f",xx.real,xx.imagin);
		return xx;
}
void addnum(struct Scomplex x,struct Scomplex y){
	float sum1=x.real+y.real;
	float sum2=x.imagin+y.imagin;
	printf("sum=%.2f+(%.2f)i",sum1,sum2);

}
int main(void){
	struct Scomplex x,y;
	x=read();
	printf("\n");
	y=read();
	addnum(x,y);
	return 0;
}

